{% extends 'base.html.twig' %}

{% block title %}Book
{% endblock %}

{% block body %}
	<h1>Book</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ book.id }}</td>
			</tr>
			<tr>
				<th>Title</th>
				<td>{{ book.Title }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ book.Description }}</td>
			</tr>
			<tr>
				<th>Cover</th>
				<td><img src="{{ asset('uploads/covers/' ~ book.cover) }}"></td>
			</tr>
			<tr>
				<th>Authors</th>
				{% for author in book.authors %}
					<td>{{ author }}</td>
				{% endfor %}
			</tr>
			<tr>
				<th>PublishYear</th>
				<td>{{ book.publishYear }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('book_index') }}">back to list</a>

	<a href="{{ path('book_edit', {'id': book.id}) }}">edit</a>

	{{ include('book/_delete_form.html.twig') }}
{% endblock %}
